FROM python:3.10-slim

RUN apt update && apt install -y \
    libglib2.0-0 \
    libsm6 \
    libxext6 \
    libxrender-dev \
    git \
    curl \
    && rm -rf /var/lib/apt/lists/*

RUN pip install --no-cache-dir \
    numpy \
    opencv-python \
    edge-impulse-linux

WORKDIR /workspace
CMD ["/bin/bash"]
